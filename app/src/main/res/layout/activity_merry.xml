<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_merry"
    tools:context=".activity.MerryActivity">


    <TextView
        android:id="@+id/merryTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="결혼 축하 알림"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/merryLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <LinearLayout
        android:id="@+id/merryLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/merrySub1Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merryTitleTv">

        <EditText
            android:id="@+id/merryTitleGroom"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:gravity="center"
            android:hint="홍길동"
            android:letterSpacing="0.5"
            android:textColor="@android:color/black"
            android:textColorHint="#f95b5b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:text="군과"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/merryTitleBride"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:gravity="center"
            android:hint="홍길동"
            android:letterSpacing="0.5"
            android:textColor="@android:color/black"
            android:textColorHint="#f95b5b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:text="양의 결혼을"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/merrySub1Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="진심으로 축하드리며"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/merrySub2Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merryLayout" />

    <TextView
        android:id="@+id/merrySub2Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="내용을 알려드립니다"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/merryLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merrySub1Tv" />

    <LinearLayout
        android:id="@+id/merryLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/merrySub3Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merrySub2Tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/merryGroom"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="신랑"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/merryGroomEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="홍길동의 장남 홍길동"
                android:letterSpacing="0.2"
                android:textColor="@android:color/black"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/merryBride"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="신부"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/merryBrideEd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="홍길동의 장녀 홍길순"
                android:letterSpacing="0.2"
                android:textColor="@android:color/black"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/merryAddress"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="주소"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/merryAddressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="장례식장 위치를 선택해 주세요"
                android:letterSpacing="0.2"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/merryAccound"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="계좌"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/merryBank"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:text="은행"
                android:textColor="@android:color/black"></Button>

            <EditText
                android:id="@+id/merryAccoundEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_merry_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="계좌번호를 입력해주세요"
                android:letterSpacing="0.2"
                android:textColor="@android:color/black"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/merrySub3Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="화환 주문은 친환결쌀 화환을 이용해주세요"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/merryBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merryLayout2" />

    <Button
        android:id="@+id/merryBtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_merry_btn"
        android:text="발송하기"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="@font/jejumyeongjo_otf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merrySub3Tv" />

</android.support.constraint.ConstraintLayout>