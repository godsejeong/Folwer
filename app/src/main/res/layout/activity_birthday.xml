<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_birthday"
    tools:context="com.hod.flower.activity.BirthdayActivity">


    <TextView
        android:id="@+id/birthdayTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="생일 축하 알림"
        android:textColor="#ea535a"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/birthdayLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <LinearLayout
        android:id="@+id/birthdayLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/birthdaySub1Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayTitleTv">

        <EditText
            android:id="@+id/birthdayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:gravity="center"
            android:hint="홍길동"
            android:letterSpacing="0.5"
            android:textColor="@android:color/black"
            android:textColorHint="#ff1a1a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:text="님의"
            android:textColor="#ea535a"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/birthdayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:gravity="center"
            android:hint="몇"
            android:letterSpacing="0.5"
            android:textColor="@android:color/black"
            android:textColorHint="#ff1a1a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo_otf"
            android:layout_marginLeft="15dp"
            android:text="번째 생일을"
            android:textColor="#ea535a"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/birthdaySub1Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="진심으로 축하드리며"
        android:textColor="#ea535a"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/birthdaySub2Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayLayout" />

    <TextView
        android:id="@+id/birthdaySub2Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="내용을 알려드립니다"
        android:textColor="#ea535a"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/birthdayLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdaySub1Tv" />

    <LinearLayout
        android:id="@+id/birthdayLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/birthdaySub3Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdaySub2Tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/birthdayDate"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="날짜"
                android:textColor="#ea535a"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/birthdayDateEd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="날짜를 입력해 주세요"
                android:letterSpacing="0.2"
                android:textColor="#ea535a"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/birthdayAddress"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="주소"
                android:textColor="#ea535a"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/birthdayAddressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="위치를 선택해 주세요"
                android:letterSpacing="0.2"
                android:padding="8dp"
                android:textColor="#ea535a"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/birthdayAccound"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="계좌"
                android:textColor="#ea535a"
                android:textSize="20sp" />

            <Button
                android:id="@+id/birthdayBank"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:text="은행"
                android:textColor="#ea535a"></Button>

            <EditText
                android:id="@+id/birthdayAccoundEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_birthday_btn"
                android:fontFamily="@font/jejumyeongjo_otf"
                android:gravity="center"
                android:hint="계좌번호를 입력해주세요"
                android:letterSpacing="0.2"
                android:textColor="#ea535a"
                android:textColorHint="#a7a7a7"
                android:textSize="15sp"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/birthdaySub3Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_otf"
        android:text="화환 주문은 친환경 쌀화환을 이용해주세요"
        android:textColor="#ea535a"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/birthdayBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayLayout2" />

    <Button
        android:id="@+id/birthdayBtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_birthday_btn"
        android:text="발송하기"
        android:textColor="#ea535a"
        android:textSize="20sp"
        android:fontFamily="@font/jejumyeongjo_otf"
        app:layout_constraintBottom_toTopOf="@+id/birthdaySpace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdaySub3Tv" />

    <Space
        android:id="@+id/birthdaySpace"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>